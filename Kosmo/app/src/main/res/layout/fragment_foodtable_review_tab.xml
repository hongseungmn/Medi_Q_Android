<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/fragment_foodTable_fragment"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:orientation="vertical"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/total_review_score"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:text="4.3"
                        android:textSize="50dp"
                        android:textColor="@color/black"
                        android:gravity="center"/>
                    <RatingBar
                        android:id="@+id/total_review_star"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:numStars="5"
                        android:rating="5"
                        android:progressTint="#DCC138"
                        android:layout_gravity="center"
                        style="@style/Widget.AppCompat.RatingBar.Indicator"
                        />
                    <Button
                        android:id="@+id/to_3d_graph"
                        android:layout_marginTop="10dp"
                        android:layout_gravity="center"
                        android:text="3D로 보기"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textColor="#F86621"
                        android:background="@drawable/analyze_new_button_reverse_bg"
                        android:layout_width="match_parent"
                        android:layout_marginHorizontal="20dp"
                        android:layout_height="wrap_content"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:paddingLeft="0dp">
                    <ProgressBar
                        android:progressDrawable="@drawable/custom_progress"
                        android:id="@+id/prgLight"
                        android:translationY="60dp"
                        android:translationX="-30dp"
                        android:rotation="270"
                        style="@android:style/Widget.ProgressBar.Horizontal"
                        android:layout_width="120dp"
                        android:layout_height="15dp"
                        android:max="100"
                        android:progress="20"
                        />
                    <ProgressBar
                        android:progressDrawable="@drawable/custom_progress"
                        android:id="@+id/prgLight2"
                        android:layout_marginLeft="30dp"
                        android:translationX="-30dp"
                        android:translationY="45dp"
                        android:rotation="270"
                        style="@android:style/Widget.ProgressBar.Horizontal"
                        android:layout_width="120dp"
                        android:layout_height="15dp"
                        android:max="100"
                        android:progress="10"
                        />
                    <ProgressBar
                        android:progressDrawable="@drawable/custom_progress"
                        android:id="@+id/prgLight3"
                        android:layout_marginLeft="60dp"
                        android:translationY="30dp"
                        android:translationX="-30dp"
                        android:rotation="270"
                        style="@android:style/Widget.ProgressBar.Horizontal"
                        android:layout_width="120dp"
                        android:layout_height="15dp"
                        android:max="100"
                        android:progress="90"
                        />
                    <ProgressBar
                        android:progressDrawable="@drawable/custom_progress"
                        android:id="@+id/prgLight4"
                        android:layout_marginLeft="90dp"
                        android:translationY="15dp"
                        android:translationX="-30dp"
                        android:rotation="270"
                        style="@android:style/Widget.ProgressBar.Horizontal"
                        android:layout_width="120dp"
                        android:layout_height="15dp"
                        android:max="100"
                        android:progress="10"
                        />
                    <ProgressBar
                        android:progressDrawable="@drawable/custom_progress"
                        android:id="@+id/prgLight5"
                        android:layout_marginLeft="120dp"
                        android:translationX="-30dp"
                        android:rotation="270"
                        style="@android:style/Widget.ProgressBar.Horizontal"
                        android:layout_width="120dp"
                        android:layout_height="15dp"
                        android:max="100"
                        android:progress="50"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginTop="50dp"
                        android:text="\t\t 1점   2점   3점   4점   5점"
                        android:textColor="#cccccc"/>
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginVertical="20dp"
                android:background="#E4E4E4"/>
            <!--긍정적 효과 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="효과"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/effect_text_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="눈 피로감 개선"
                    android:textColor="#25a6fe"
                    android:textStyle="bold"
                    android:textSize="12dp"
                    android:background="@drawable/hashtag_effected"
                    android:padding="5dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/line_middle"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="10dp"
                    />
                <TextView
                    android:id="@+id/effect_percent_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/hashtag_effected"
                    android:padding="5dp"
                    android:text="50%"

                    android:textColor="#25a6fe"
                    android:textSize="12dp"
                    android:textStyle="bold" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/effect_text_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="눈 피로감 개선"
                    android:textColor="#25a6fe"
                    android:textStyle="bold"
                    android:textSize="12dp"
                    android:background="@drawable/hashtag_effected"
                    android:padding="5dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/line_middle"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="10dp"
                    />
                <TextView
                    android:id="@+id/effect_percent_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/hashtag_effected"
                    android:padding="5dp"
                    android:text="50%"

                    android:textColor="#25a6fe"
                    android:textSize="12dp"
                    android:textStyle="bold" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/effect_text_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="눈 피로감 개선"
                    android:textColor="#25a6fe"
                    android:textStyle="bold"
                    android:textSize="12dp"
                    android:background="@drawable/hashtag_effected"
                    android:padding="5dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/line_middle"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="10dp"
                    />
                <TextView
                    android:id="@+id/effect_percent_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/hashtag_effected"
                    android:padding="5dp"
                    android:text="50%"

                    android:textColor="#25a6fe"
                    android:textSize="12dp"
                    android:textStyle="bold" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/effect_text_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="눈 피로감 개선"
                    android:textColor="#25a6fe"
                    android:textStyle="bold"
                    android:textSize="12dp"
                    android:background="@drawable/hashtag_effected"
                    android:padding="5dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/line_middle"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="10dp"
                    />
                <TextView
                    android:id="@+id/effect_percent_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/hashtag_effected"
                    android:padding="5dp"
                    android:text="50%"

                    android:textColor="#25a6fe"
                    android:textSize="12dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!--부정적 효과 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="부작용"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/noEffect_text_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="눈 피로감 개선"
                    android:textColor="#ff4b4b"
                    android:textStyle="bold"
                    android:textSize="12dp"
                    android:background="@drawable/hashtag_no_effected"
                    android:padding="5dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/line_middle"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="10dp"
                    />
                <TextView
                    android:id="@+id/noEffect_percent_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/hashtag_no_effected"
                    android:padding="5dp"
                    android:text="50%"
                    android:textColor="#ff4b4b"
                    android:textSize="12dp"
                    android:textStyle="bold" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/noEffect_text_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="눈 피로감 개선"
                    android:textColor="#ff4b4b"
                    android:textStyle="bold"
                    android:textSize="12dp"
                    android:background="@drawable/hashtag_no_effected"
                    android:padding="5dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/line_middle"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="10dp"
                    />
                <TextView
                    android:id="@+id/noEffect_percent_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/hashtag_no_effected"
                    android:padding="5dp"
                    android:text="50%"
                    android:textColor="#ff4b4b"
                    android:textSize="12dp"
                    android:textStyle="bold" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/noEffect_text_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="눈 피로감 개선"
                    android:textColor="#ff4b4b"
                    android:textStyle="bold"
                    android:textSize="12dp"
                    android:background="@drawable/hashtag_no_effected"
                    android:padding="5dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/line_middle"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="10dp"
                    />
                <TextView
                    android:id="@+id/noEffect_percent_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/hashtag_no_effected"
                    android:padding="5dp"
                    android:text="50%"
                    android:textColor="#ff4b4b"
                    android:textSize="12dp"
                    android:textStyle="bold" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/noEffect_text_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="눈 피로감 개선"
                    android:textColor="#ff4b4b"
                    android:textStyle="bold"
                    android:textSize="12dp"
                    android:background="@drawable/hashtag_no_effected"
                    android:padding="5dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/line_middle"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="10dp"
                    />
                <TextView
                    android:id="@+id/noEffect_percent_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/hashtag_no_effected"
                    android:padding="5dp"
                    android:text="50%"
                    android:textColor="#ff4b4b"
                    android:textSize="12dp"
                    android:textStyle="bold" />
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="20dp"
                android:background="#E4E4E4"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/infiniteRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="400dp">

            </androidx.recyclerview.widget.RecyclerView>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.appcompat.widget.LinearLayoutCompat>