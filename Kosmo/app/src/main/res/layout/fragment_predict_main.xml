<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="20dp"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Medi-Q의 AI예측 서비스를 이용해 보세요"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="20dp"/>

    <LinearLayout
        android:layout_marginTop="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/predict_circle_button"
        android:orientation="horizontal">
        <TextView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/predict_img_1"/>
        <LinearLayout
            android:id="@+id/predict_diabetes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="당뇨병 예측하기"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="20dp"
                android:gravity="center"
                android:layout_marginTop="10dp"/>
            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:paddingHorizontal="20dp"
                android:layout_height="wrap_content"
                android:text="현재 당뇨병 모델의 정확도는 70%입니다"
                android:textStyle="bold"
                android:textColor="@color/black"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="👉 Click!"
                android:textColor="#6A6A6A"
                android:layout_marginTop="15dp"
                android:paddingHorizontal="25dp"
                android:gravity="right"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/predict_circle_button"
        android:orientation="horizontal">
        <TextView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/predict_img_2"/>
        <LinearLayout
            android:id="@+id/predict_cardiovascular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="심혈관질환 예측하기"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="20dp"
                android:gravity="center"
                android:layout_marginTop="10dp"/>
            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:paddingHorizontal="20dp"
                android:layout_height="wrap_content"
                android:text="현재 심혈관질환 모델의 정확도는 70%입니다"
                android:textStyle="bold"
                android:textColor="@color/black"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="👉 Click!"
                android:textColor="#6A6A6A"
                android:layout_marginTop="15dp"
                android:paddingHorizontal="25dp"
                android:gravity="right"/>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/predict_circle_button"
        android:orientation="horizontal">
        <TextView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/predict_img_3"/>
        <LinearLayout
            android:id="@+id/predict_parkinson"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="파킨슨(치매) 예측하기"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="20dp"
                android:gravity="center"
                android:layout_marginTop="10dp"/>
            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:paddingHorizontal="20dp"
                android:layout_height="wrap_content"
                android:text="현재 심혈관질환 모델의 정확도는 70%입니다"
                android:textStyle="bold"
                android:textColor="@color/black"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="👉 Click!"
                android:textColor="#6A6A6A"
                android:layout_marginTop="15dp"
                android:paddingHorizontal="25dp"
                android:gravity="right"/>
        </LinearLayout>
    </LinearLayout>



</androidx.appcompat.widget.LinearLayoutCompat>