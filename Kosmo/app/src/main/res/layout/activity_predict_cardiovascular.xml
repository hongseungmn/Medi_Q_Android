<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/white"
        android:orientation="horizontal"
        >
        <ImageButton
            android:id="@+id/predictBackButton"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:src="@drawable/baseline_arrow_back_ios_new_24"
            android:scaleType="fitCenter"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="15dp"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/whiteGrey"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingHorizontal="30dp"
            android:layout_gravity="center"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="인공지능을 통한"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="15dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="질병 예측 예방 시스템 구축"
                android:textColor="#EF605D"
                android:textSize="18dp"/>
        </LinearLayout>
        <ImageView
            android:layout_weight="2"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:src="@drawable/predict_bg"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="심혈관질환 수치 예측하기"
        android:textStyle="bold"
        android:textSize="30dp"
        android:gravity="center"
        android:textColor="#3288CA"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="성별"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginHorizontal="30dp"/>
            <RadioGroup
                android:id="@+id/predict_cardiovascular_gender_radiogroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">
                <RadioButton
                    android:text="남성"
                    android:tag="2"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:id="@+id/predict_cardiovascular_gender_m"
                    android:layout_width="wrap_content"
                    android:buttonTint="#F86621"
                    android:layoutDirection="rtl"
                    android:paddingHorizontal="50dp"
                    android:layout_marginVertical="10dp"
                    android:layout_height="30dp" />
                <RadioButton
                    android:text="여성"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:tag="1"
                    android:id="@+id/predict_cardiovascular_gender_w"
                    android:layout_width="wrap_content"
                    android:buttonTint="#F86621"
                    android:layoutDirection="rtl"
                    android:paddingHorizontal="50dp"
                    android:layout_marginVertical="10dp"
                    android:layout_height="30dp" />
            </RadioGroup>
            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="신장"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginHorizontal="30dp"/>

            <EditText
                android:id="@+id/predict_cardiovascular_height"
                android:layout_width="350dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/edittext_rounded_main"
                android:gravity="center"
                android:maxLines="1"
                android:hint="신장을 입력해주세요"
                android:textColorHint="#cccccc"
                android:textColor="@color/black"
                android:padding="10dp"
                android:layout_margin="5dp" />
            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="몸무게"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginHorizontal="30dp"/>

            <EditText
                android:id="@+id/predict_cardiovascular_weight"
                android:layout_width="350dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/edittext_rounded_main"
                android:gravity="center"
                android:maxLines="1"
                android:hint="몸무게를 입력해주세요"
                android:textColorHint="#cccccc"
                android:textColor="@color/black"
                android:padding="10dp"
                android:layout_margin="5dp" />
            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="혈압(최고/최저)"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginHorizontal="30dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="20dp">
                <EditText
                    android:id="@+id/predict_cardiovascular_bloodpress_high"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="40dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/edittext_rounded_main"
                    android:gravity="center"
                    android:maxLines="1"
                    android:hint="최고 혈압"
                    android:textColorHint="#cccccc"
                    android:textColor="@color/black"
                    android:padding="10dp"
                    android:layout_margin="5dp" />
                <EditText
                    android:id="@+id/predict_cardiovascular_bloodpress_low"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="40dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/edittext_rounded_main"
                    android:gravity="center"
                    android:maxLines="1"
                    android:hint="최저 혈압"
                    android:textColorHint="#cccccc"
                    android:textColor="@color/black"
                    android:padding="10dp"
                    android:layout_margin="5dp"/>
            </LinearLayout>
            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="콜레스테롤"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginHorizontal="30dp"/>

            <EditText
                android:id="@+id/predict_cardiovascular_col"
                android:layout_width="350dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/edittext_rounded_main"
                android:gravity="center"
                android:maxLines="1"
                android:hint="콜레스테롤 수치를 입력해주세요"
                android:textColorHint="#cccccc"
                android:textColor="@color/black"
                android:padding="10dp"
                android:layout_margin="5dp" />
            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="포도당"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginHorizontal="30dp"/>

            <EditText
                android:id="@+id/predict_cardiovascular_glu"
                android:layout_width="350dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/edittext_rounded_main"
                android:gravity="center"
                android:maxLines="1"
                android:hint="포도당 수치를 입력해주세요"
                android:textColorHint="#cccccc"
                android:textColor="@color/black"
                android:padding="10dp"
                android:layout_margin="5dp" />
            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="연령"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginHorizontal="30dp"/>
            <EditText
                android:id="@+id/predict_cardiovascular_age"
                android:layout_width="350dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/edittext_rounded_main"
                android:gravity="center"
                android:maxLines="1"
                android:hint="연령을 입력해주세요"
                android:textColorHint="#cccccc"
                android:textColor="@color/black"
                android:padding="10dp"
                android:layout_margin="5dp" />
            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="흡연 유무"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginHorizontal="30dp"/>
            <RadioGroup
                android:id="@+id/predict_cardiovascular_smoke_radiogroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">
                <RadioButton
                    android:text="흡연"
                    android:tag="0"
                    android:id="@+id/predict_cardiovascular_smoke_y"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:layout_width="wrap_content"
                    android:buttonTint="#F86621"
                    android:layoutDirection="rtl"
                    android:paddingHorizontal="50dp"
                    android:layout_marginVertical="10dp"
                    android:layout_height="30dp" />
                <RadioButton
                    android:text="비 흡연"
                    android:tag="1"
                    android:id="@+id/predict_cardiovascular_smoke_n"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:layout_width="wrap_content"
                    android:buttonTint="#F86621"
                    android:layoutDirection="rtl"
                    android:paddingHorizontal="50dp"
                    android:layout_marginVertical="10dp"
                    android:layout_height="30dp" />
            </RadioGroup>
            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="음주 유무"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginHorizontal="30dp"/>
            <RadioGroup
                android:id="@+id/predict_cardiovascular_drink_radiogroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">
                <RadioButton
                    android:text="음주 o"
                    android:tag="0"
                    android:id="@+id/predict_cardiovascular_drink_y"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:layout_width="wrap_content"
                    android:buttonTint="#F86621"
                    android:layoutDirection="rtl"
                    android:paddingHorizontal="50dp"
                    android:layout_marginVertical="10dp"
                    android:layout_height="30dp" />
                <RadioButton
                    android:text="음주 x"
                    android:tag="1"
                    android:id="@+id/predict_cardiovascular_drink_n"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:layout_width="wrap_content"
                    android:buttonTint="#F86621"
                    android:layoutDirection="rtl"
                    android:paddingHorizontal="50dp"
                    android:layout_marginVertical="10dp"
                    android:layout_height="30dp" />
            </RadioGroup>
            <Button
                android:id="@+id/predict_cardiovascular_btn"
                android:layout_marginTop="50dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="40dp"
                android:background="@drawable/analyze_new_button_bg"
                android:text="분석하기"
                android:textSize="15sp"
                android:textStyle="bold"/>
        </LinearLayout>
    </ScrollView>

</androidx.appcompat.widget.LinearLayoutCompat>