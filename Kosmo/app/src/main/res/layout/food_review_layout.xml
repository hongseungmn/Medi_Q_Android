<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_marginVertical="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="20dp">
        <TextView
            android:id="@+id/review_layout_userId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="userName"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="15dp"/>
        <TextView
            android:id="@+id/review_layout_userInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="50대 | 여성 | 3 ~ 6개월"
            android:textColor="#717171"
            android:textSize="12dp"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:id="@+id/review_layout_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2023-07-24"
            android:textColor="#717171"
            android:gravity="right"/>
    </LinearLayout>
    <RatingBar
        android:id="@+id/review_layout_star_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:rating="5"
        android:progressTint="#DCC138"
        style="@style/Widget.AppCompat.RatingBar.Small"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="5dp"
        />
    <LinearLayout
        android:id="@+id/effect_list_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="20dp"
        android:layout_marginVertical="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="효과"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="15dp"/>
        <TextView
            android:id="@+id/review_layout_effect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/hashtag_effected"
            android:text="효과가 탁월해요"
            android:textSize="10dp"
            android:padding="2dp"
            android:layout_marginHorizontal="8dp"
            android:textColor="#25a6fe"
            android:textStyle="bold"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/noEffect_list_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="20dp"
        android:layout_marginVertical="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="부작용"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="15dp"/>
        <TextView
            android:id="@+id/review_layout_noEffect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/hashtag_no_effected"
            android:text="효과가 없었어요"
            android:textSize="10dp"
            android:padding="2dp"
            android:layout_marginHorizontal="8dp"
            android:textColor="#ff4b4b"
            android:textStyle="bold"/>
    </LinearLayout>
    <TextView
        android:id="@+id/review_layout_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="효과가 아직은 안나타나요"
        android:textColor="@color/black"
        android:paddingHorizontal="20dp"
        android:layout_marginTop="20dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="10dp"
        android:background="@color/whiteGrey"/>
</androidx.appcompat.widget.LinearLayoutCompat>