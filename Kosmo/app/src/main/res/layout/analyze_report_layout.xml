<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <LinearLayout
        android:id="@+id/main_recent_analyze_report"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="20dp"
        android:weightSum="10"
        android:background="@drawable/report_note">
        <LinearLayout
            android:paddingVertical="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="9">

            <TextView
                android:id="@+id/analyze_fragment_analyze_report_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="'???' 기준"
                android:textStyle="bold"
                android:padding="3dp"
                android:layout_marginLeft="30dp"
                android:textSize="10dp"
                android:background="@drawable/hashtag_rounded"
                android:textColor="#FB4B16"/>
            <TextView
                android:id="@+id/analyze_fragment_analyze_report_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="로그인 후 이용해주세요"
                android:textStyle="italic|bold"
                android:padding="3dp"
                android:layout_marginLeft="30dp"
                android:textSize="25dp"
                android:textColor="@color/black"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="13dp"
                    android:text="섭취 목적 : "
                    android:layout_marginLeft="30dp"
                    android:textColor="#616161"/>
                <TextView
                    android:id="@+id/analyze_fragment_analyze_report_purpose"
                    android:layout_width="200dp"
                    android:layout_height="23dp"
                    android:text="장 건강"
                    android:ellipsize="marquee"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="13dp"
                    android:text="섭취 영양제 : "
                    android:layout_marginLeft="30dp"
                    android:textColor="#616161"/>
                <TextView
                    android:id="@+id/analyze_fragment_analyze_report_food"
                    android:layout_width="150dp"
                    android:layout_height="15dp"
                    android:text="비타민"
                    android:ellipsize="marquee"
                    android:textColor="@color/black"
                    android:textSize="10dp"
                    />
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=">"
                    android:textSize="20sp"
                    android:textColor="#919191"
                    android:layout_marginRight="40dp"/>
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingTop="20dp"
            android:drawableTop="@drawable/baseline_delete_forever_24"
            android:background="@drawable/report_note_side_green"/>
    </LinearLayout>
</androidx.appcompat.widget.LinearLayoutCompat>